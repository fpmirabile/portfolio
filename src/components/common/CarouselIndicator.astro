---
export interface Props {
  isActive: boolean;
  index: number;
}

const { isActive, index } = Astro.props;
---

<button
  class:list={[
    "carousel-indicator w-2 h-2 rounded-full transition-all duration-200",
    isActive ? "bg-accent" : "bg-muted-foreground/30",
  ]}
  data-index={index}
  aria-label={`Go to item ${index + 1}`}
>
</button>
