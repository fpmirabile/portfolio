---
interface Props {
  year: string;
  title: string;
  description: string;
  tech: string[];
  align?: "left" | "right";
}

const { year, title, description, tech, align = "left" } = Astro.props as Props;
const isLeft = align === "left";
---

<div class={isLeft ? "lg:text-right" : ""}>
  <div
    class="bg-card border border-border rounded-xl p-6 hover:shadow-lg hover:border-primary/30 transition-all duration-300"
  >
    <div class="text-2xl font-bold text-primary mb-2">
      {year}
    </div>
    <h3 class="text-xl font-semibold text-card-foreground mb-3">
      {title}
    </h3>
    <p class="text-muted-foreground mb-4 leading-relaxed">
      {description}
    </p>
    <div class={`flex flex-wrap gap-2 ${isLeft ? "lg:justify-end" : ""}`}>
      {
        tech.map((techItem) => (
          <span class="px-2 py-1 bg-primary/10 text-primary rounded text-xs font-mono">
            {techItem}
          </span>
        ))
      }
    </div>
  </div>
</div>
